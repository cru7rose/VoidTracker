<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="1-create-analytics-location-history-table" author="architect">
        <comment>ARCHITEKTURA: Tworzy tabelę analytics_location_history do przechowywania pełnej ścieżki GPS zleceń.</comment>
        <createTable tableName="analytics_location_history">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="order_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="driver_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="latitude" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="longitude" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="timestamp" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex indexName="idx_location_history_order_id_timestamp"
                     tableName="analytics_location_history">
            <column name="order_id"/>
            <column name="timestamp"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>