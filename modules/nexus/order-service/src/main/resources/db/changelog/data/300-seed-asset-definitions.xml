<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="300-seed-asset-definitions" author="enterprise-schema">
        <insert tableName="vt_asset_definitions">
            <column name="asset_def_id" valueComputed="gen_random_uuid()"/>
            <column name="tenant_id" value="00000000-0000-0000-0000-000000000000"/>
