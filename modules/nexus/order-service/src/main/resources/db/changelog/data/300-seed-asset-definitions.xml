        <insert tableName="vt_asset_definitions">
            <column name="asset_def_id" valueComputed="gen_random_uuid()"/>
            <column name="tenant_id" value="00000000-0000-0000-0000-000000000000"/>
            <column name="name" value="Envelope"/>
            <column name="category" value="ENVELOPE"/>
            <column name="icon" value="envelope_icon"/>
            <column name="description" value="Document envelope"/>
            <column name="max_weight_kg" value="1.00"/>
            <column name="max_volume_m3" value="0.001"/>
            <column name="stackable" valueBoolean="true"/>
            <column name="requires_climate_control" valueBoolean="false"/>
            <column name="is_active" valueBoolean="true"/>
        </insert>

        <insert tableName="vt_asset_definitions">
            <column name="asset_def_id" valueComputed="gen_random_uuid()"/>
            <column name="tenant_id" value="00000000-0000-0000-0000-000000000000"/>
            <column name="name" value="Hazmat Container"/>
            <column name="category" value="CONTAINER"/>
            <column name="icon" value="hazmat_icon"/>
            <column name="description" value="UN-certified hazardous materials container"/>
            <column name="max_weight_kg" value="500.00"/>
            <column name="max_volume_m3" value="0.5"/>
            <column name="stackable" valueBoolean="false"/>
            <column name="requires_climate_control" valueBoolean="false"/>
            <column name="requires_certification" value="ADR"/>
            <column name="handling_instructions" value="Handle with care, keep upright, avoid heat sources"/>
            <column name="is_active" valueBoolean="true"/>
        </insert>

        <rollback>
            DELETE FROM vt_asset_definitions WHERE tenant_id = '00000000-0000-0000-0000-000000000000';
        </rollback>
    </changeSet>

